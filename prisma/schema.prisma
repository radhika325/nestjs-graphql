

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}
model Post {
  id Int  @id @default(autoincrement())
  title String
  content String
  published Boolean @default(false)
  createdAt DateTime @default(now())
}

model User {
  id Int  @id @default(autoincrement())
  email String @unique
  name String
  password String
  createdAt DateTime @default(now())
}

model Category {
   id Int  @id @default(autoincrement())
   name String
   description String
}